<Tab>:
    MDLabel:
        id: label
        text:
        halign: "center"


<SignInServer>
    BoxLayout:
        orientation: 'vertical'
        MDTextField:
            id: host_field
            mode: 'rectangle'
            hint_text: "Enter Host"
            text:

        MDTextField:
            id: port_field
            mode: 'rectangle'
            hint_text: "Enter Port"
            text:
            on_text_validate:
                root.sign_in()
                root.manager.transition.direction = 'left'
                root.manager.current = 'app'


<SignIn>
    BoxLayout:
        orientation: "vertical"
        MDTextField:
            id: username_field
            hint_text: "Enter username"
            text:

        MDTextField:
            id: password_field
            password: True
            hint_text: "Enter password"
            text:
            on_text_validate:
                root.validate_login()
                root.manager.transition.direction = 'left'


<AppLayout>
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "AllChat"
            right_action_items: [ ['magnify', lambda x: print("magnify")], ['chat', lambda x: print("chat")], ['dots-vertical', lambda x: print('settings')] ]

        MDTabs:
            id: android_tabs
            on_tab_switch: app.on_tab_switch(*args)

            Tab:
                text: "Chat"
                ScrollView:
                    MDList:
                        id: msg_list

                MDTextField:
                    id: msg_field
                    mode: 'rectangle'
                    hint_text: "Chat box"
                    helper_text: "Say something...or else"
                    helper_text_mode: "on_focus"
                    text:
                    on_text_validate: root.send_message('profile_pic\Robbie.png')

            Tab:
                text: "Contacts"
